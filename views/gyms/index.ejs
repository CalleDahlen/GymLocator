<% layout('layouts/boilerplate') %>
<div id="cluster-map"></div>
<h1>All Gyms</h1>

<% for(let gym of gyms) {%>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <%if(gym.images.length) {%>
            <img class="img-fluid" alt="" src=" <%= gym.images[0].url %>  ">
            <% }else {%>
            <img class="img-fluid" alt=""
                src="https://res.cloudinary.com/dbxmi3dep/image/upload/v1618227048/Yelpcamp/v6lkpkv7vgyp5txdniyx.jpg">
            <% } %>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= gym.title %> </h5>
                <p class="card-text"> <%= gym.description  %> </p>
                <p>
                    <small class="text-muted"> <%= gym.location %> </small>
                </p>
                <a class="btn btn-lg btn-secondary font-weight-bold"" href=" /gyms/<%=gym._id%>">
                    <%= gym.title %> </a>
            </div>
        </div>
    </div>
</div>
<% } %>

<script>
    const mapToken = '<%- process.env.MAPBOX_TOKEN%>';
    const gyms = { features: <%- JSON.stringify(gyms) %>};
</script>

<script src="/javascripts/clusterMap.js"></script>